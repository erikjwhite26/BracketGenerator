@page "/about"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>About</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6 mb-10">

    <MudText Typo="Typo.h3" Class="mb-2">
        About This Site
    </MudText>

    <MudText Typo="Typo.subtitle1" Class="mb-6">
        A new way to fill out brackets — fast, fun, and powered by real data.
    </MudText>

    <MudGrid GutterSize="3">

        <!-- Bracket Card -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="pa-4 d-flex flex-column h-100"
                     Style="background-color: rgba(255,255,255,0.85); backdrop-filter: blur(4px); border-radius: 12px;">
                <MudCardContent>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.SportsBasketball" Size="Size.Medium" Class="mr-2" />
                        <MudText Typo="Typo.h5">The Bracket</MudText>
                    </MudStack>

                    <MudList Dense="true">
                        <MudListItem>- The bracket uses the official 2026 tournament selections.</MudListItem>
                        <MudListItem>- Click on the team you think will win each matchup.</MudListItem>
                        <MudListItem>- Once complete, your chosen champion appears automatically.</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Stats Card -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="pa-4 d-flex flex-column h-100"
                     Style="background-color: rgba(255,255,255,0.85); backdrop-filter: blur(4px); border-radius: 12px;">
                <MudCardContent>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.ShowChart" Size="Size.Medium" Class="mr-2" />
                        <MudText Typo="Typo.h5">Stats</MudText>
                    </MudStack>

                    <MudList Dense="true">
                        <MudListItem>- <b>Mathematical:</b> Team 2 seed ÷ (Team 1 seed + Team 2 seed).</MudListItem>
                        <MudListItem>- <b>Historical:</b> Based on real seed‑vs‑seed outcomes from past tournaments.</MudListItem>
                        <MudListItem>- <b>538 Odds:</b> Uses round‑by‑round probabilities from FiveThirtyEight.</MudListItem>
                        <MudListItem>- <b>Coin Flip:</b> Always returns 0.5.</MudListItem>
                        <MudListItem>- <b>Random:</b> Generates a random decimal between 0 and 1.</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Auto-Fill Card -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="pa-4 d-flex flex-column h-100"
                     Style="background-color: rgba(255,255,255,0.85); backdrop-filter: blur(4px); border-radius: 12px;">
                <MudCardContent>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Medium" Class="mr-2" />
                        <MudText Typo="Typo.h5">Auto‑Fill</MudText>
                    </MudStack>

                    <MudList Dense="true">
                        <MudListItem>- Compares the selected stat equation result to a random decimal.</MudListItem>
                        <MudListItem>- If the stat result ≥ random value, Team 1 wins; otherwise Team 2 wins.</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Clear Card -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="pa-4 d-flex flex-column h-100"
                     Style="background-color: rgba(255,255,255,0.85); backdrop-filter: blur(4px); border-radius: 12px;">
                <MudCardContent>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.DeleteSweep" Size="Size.Medium" Class="mr-2" />
                        <MudText Typo="Typo.h5">Clear</MudText>
                    </MudStack>

                    <MudList Dense="true">
                        <MudListItem>- Removes all current selections from the bracket.</MudListItem>
                        <MudListItem>- A quick way to start fresh.</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

    </MudGrid>

</MudContainer>